{
  "manifest_version": 3,
  "name": "Email Spoofing Detector - SpoofShield",
  "description": "Detects spoofed emails using AI and provides real-time scanning.",
  "version": "2.5",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://127.0.0.1:5000/*"
  ]
}
